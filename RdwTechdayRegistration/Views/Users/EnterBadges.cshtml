@model List<RdwTechdayRegistration.Utility.BadgeContentModel>

@{
    ViewData["Title"] = "Badges opvoeren";
}

<div class="row">
    <div class="col-md-4">
        <form asp-action="EnterBadges">
            @for (int i = 0; i < Model.Count; i++)
            {
                <div class="form-group">
                    <label asp-for="@Model[i].name" class="control-label"></label>
                    <input asp-for="@Model[i].name" class="form-control" />
                    <span asp-validation-for="@Model[i].name" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="@Model[i].organisation" class="control-label"></label>
                    <input asp-for="@Model[i].organisation" class="form-control" />
                    <span asp-validation-for="@Model[i].organisation" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="@Model[i].PersonType" class="control-label"></label>
                    <select asp-for="@Model[i].PersonType" asp-items="Html.GetEnumSelectList<RdwTechdayRegistration.Utility.BadgePersonType>()" class="form-control"></select>
                    <span asp-validation-for="@Model[i].PersonType" class="text-danger"></span>
                </div>
                <hr />
            }
            <div class="form-group">
                <input type="submit" value="Aanmaken" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>




