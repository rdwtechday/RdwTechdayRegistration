@model RdwTechdayRegistration.Models.Maxima

@{
    ViewData["Title"] = "Aantallen";
}

<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="MaxRDW" class="control-label"></label>
                <input asp-for="MaxRDW" class="form-control" />
                <span asp-validation-for="MaxRDW" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="MaxNonRDW" class="control-label"></label>
                <input asp-for="MaxNonRDW" class="form-control" />
                <span asp-validation-for="MaxNonRDW" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="SiteHasBeenLocked" class="control-label"></label>
                <input asp-for="SiteHasBeenLocked" class="form-control" />
                <span asp-validation-for="SiteHasBeenLocked" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>
<hr/>
<div class="row">
    <div class="col-md-4">
        <div class="panel panel-default">
            <!-- Default panel contents -->
            <div class="panel-heading"><strong>Totalen gebruikers</strong></div>
            <table class="table">
                <tbody>
                    <tr>
                        <td>
                            <text>Geverifieerd</text>
                        </td>
                        <td>
                            @ViewBag.ConfirmedUserCount
                        </td>
                    </tr>
                    <tr>
                        <td>
                            <text>Niet geverifieerd</text>
                        </td>
                        <td>
                            @ViewBag.UnconfirmedUserCount
                        </td>
                    </tr>
                    <tr>
                        <td>
                            <text>RDW geverifieerd</text>
                        </td>
                        <td>
                            @ViewBag.ConfirmedRdwUserCount
                        </td>
                    </tr>
                    <tr>
                        <td>
                            <text>RDW niet geverifieerd</text>
                        </td>
                        <td>
                            @ViewBag.UnconfirmedRdwUserCount
                        </td>
                    </tr>
                    <tr>
                        <td>
                            <text>Niet-RDW geverifieerd</text>
                        </td>
                        <td>
                            @ViewBag.ConfirmedNonRdwUserCount
                        </td>
                    </tr>
                    <tr>
                        <td>
                            <text>Niet-RDW niet geverifieerd</text>
                        </td>
                        <td>
                            @ViewBag.UnconfirmedNonRdwUserCount
                        </td>
                    </tr>
                </tbody>
            </table>
        </div>
    </div>
</div>
@if (Model.LastCreatedUsers.Count() > 0)
{
    <hr />
    <div class="row">
        <div class="col-md-12">
            <h3>Laatst aangemaakte gebruikers</h3>
            @await Html.PartialAsync("_UserListPartial", Model.LastCreatedUsers)
        </div>
    </div>
}
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
